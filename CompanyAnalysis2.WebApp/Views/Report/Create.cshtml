        <div class="row">
            <br />
            <div class="col-lg-4 col-md-6">
                <h3>VÄRDERING</h3>
                <div class="editor-label">
                    <b>Antal aktier</b>
                </div>
                <div class="editor-field">
                    <input class="form-control" id="NumberOfShares" name="NumberOfShares" type="text" required value="@Model.NumberOfShares" />
                </div>
                <br />
                <div class="editor-label">
                    <b>Aktiekurs @Model.Period.EndDate.Value.ToShortDateString()</b>
                </div>
                <div class="editor-field">
                    @if (Model.StockPrice.HasValue == false)
                    { <input id="stockprice" class="form-control" name="stockprice" type="text" required value="" /> }
                    else
                    { <input id="stockprice" class="form-control" name="stockprice" type="text" required value="@Model.StockPrice.Value" /> }
                </div>

            </div>
            <div class="col-lg-4 col-md-6">
                <h3>LEDNING</h3>
                <div class="editor-label">
                    <b>VD</b>
                </div>
                <div class="editor-field">
                    <input class="form-control" id="CEO" name="CEO" type="text" value="@Model.CEO"  />
                </div>
