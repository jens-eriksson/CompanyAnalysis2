                    <b>Omsättning (milj)</b>
                </div>
                <div class="editor-field">
                    <input class="form-control" id="Revenue" name="Revenue" type="text" required value="@Model.Revenue" />
                </div>
                <br />
                <div class="editor-label">
                    <b>Resultat (milj)</b>
                </div>
                <div class="editor-field">
                    <input class="form-control" id="NetIncome" name="NetIncome" type="text" required value="@Model.NetIncome" />
                </div>

            </div>

            <div class="col-lg-4 col-md-6">
                <h3>BALANSRÄKNING</h3>
                <div class="editor-label">
                    <b>Tillgångar (milj)</b>
                </div>
                <div class="editor-field">
                    <input class="form-control" id="Assets" name="Assets" type="text" required value="@Model.Assets" />
                </div>
                <br />
                <div class="editor-label">
                    <b>Eget kapital (milj)</b>
                </div>
                <div class="editor-field">
                    <input class="form-control" id="Equity" name="Equity" type="text" required value="@Model.Equity" />
                </div>
